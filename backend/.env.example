# Application Configuration
APP_NAME=MacOS Agent Platform
ENV=development
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["*"]

# LLM Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT_S=60
OPENAI_MAX_TOOL_TURNS=8

# OpenRouter Configuration (optional)
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=

# LLM Cache Configuration
LLM_REQUEST_TIMEOUT=30
LLM_CACHE_ENABLED=true
LLM_CACHE_TTL=3600

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./backend_data/app.db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# File Upload Configuration
UPLOAD_DIR=./backend_data/uploads
MAX_UPLOAD_SIZE=10485760
ATTACHMENT_TEXT_LIMIT=10000

# Memory System Configuration
MEMORY_WINDOW_SIZE=10
MEMORY_TTL_S=3600
MEMORY_CONTEXT_MAX_CHARS=4000
MEMORY_SUMMARY_TRIGGER=24
MEMORY_KEEP_LAST=8
EMBEDDING_MODEL=text-embedding-3-small

# Monitoring Configuration
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Security Configuration
ALLOWED_ROOTS=[]
AGENT_ALLOWED_ROOTS=
